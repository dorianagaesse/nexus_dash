generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Project {
  id          String     @id @default(cuid())
  name        String
  description String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  tasks       Task[]
  resources   Resource[]
}

model Task {
  id          String   @id @default(cuid())
  title       String
  description String?
  blockedNote String?
  completedAt DateTime?
  archivedAt  DateTime?
  status      String   @default("Backlog")
  position    Int      @default(0)
  label       String?
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  attachments TaskAttachment[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Resource {
  id          String   @id @default(cuid())
  type        String
  name        String
  content     String
  color       String?
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  attachments ResourceAttachment[]
  createdAt   DateTime @default(now())
}

model TaskAttachment {
  id         String   @id @default(cuid())
  taskId      String
  task        Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  kind        String
  name        String
  url         String?
  storageKey  String?
  mimeType    String?
  sizeBytes   Int?
  createdAt   DateTime @default(now())

  @@index([taskId])
}

model ResourceAttachment {
  id         String   @id @default(cuid())
  resourceId  String
  resource    Resource @relation(fields: [resourceId], references: [id], onDelete: Cascade)
  kind        String
  name        String
  url         String?
  storageKey  String?
  mimeType    String?
  sizeBytes   Int?
  createdAt   DateTime @default(now())

  @@index([resourceId])
}
